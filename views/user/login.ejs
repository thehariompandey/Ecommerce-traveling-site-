<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Login on Wanderlust </h1>
  <div class="col-6 offset-3">
    <form action="/login" method="post">
        <div class="mb-3">
            <label for="username" class="form-label" class="needs-validation novalidate" >username</label>
            <input
              name="username"
              id="username"
              type="text"
              class="form-control"
              required
            />
          </div>

          <div class="mb-3">
            <label for="password" class="form-label" class="needs-validation novalidate" >Password</label>
            <input
              name="password"
              id="password"
              type="password"
              class="form-control"
              required
            />
          </div>

          <button class="btn btn-success"> login </button>

    </form>
    </div>
</div>